<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{% endblock %} - Ticketing</title>
        <style type="text/css">
            body {
                padding-top: 10px;
                padding-bottom: 20px;
              }
              .sidebar-nav {
                padding: 9px 0;
              }

              @media (max-width: 980px) {
                /* Enable use of floated navbar text */
                .navbar-text.pull-right {
                  float: none;
                  padding-left: 5px;
                  padding-right: 5px;
                }
            }
        </style>
        <link rel="stylesheet" type="text/css" href="web/bootstrap.min.css">
        <script src="script.js"></script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span3">
                    <div class="well sidebar-nav">
                        <ul class="nav nav-list">
                            <li class="nav-header">Menu</li>
                            <li {% if global.request.get('_route') == 'home' %} class="active"{% endif %}>
                                <a href="{{ path('home') }}">Home</a>
                            </li>
                            <li {% if global.request.get('_route') == 'top10' %} class="active"{% endif %}>
                                <a href="{{ path('top10') }}">TOP 10</a>
                            </li>
                            <li {% if global.request.get('_route') == 'appel_sms' %} class="active"{% endif %}>
                                <a href="{{ path('appel_sms') }}">SMS et Appels</a>
                            </li>
                        </ul>
                    </div>
                    
                </div>
                <div class="span9">
                    
                        {% block body %}
                            <div class="hero-unit">
                                <h1>Home</h1>
                            </div>
                            <div class="row-fluid">
                            </div>

                        {% endblock %}
                    
                </div>
            </div>
        </div>
        <script type="text/javascript" src="web/bootstrap.min.js"></script>
    </body>
    
</html>